@using CollegeVotingSystem.Models
@model tbl_Election
@{
    ViewBag.Title = "Election";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var candidate = new tbl_Candidate();
    var position = new tbl_Position();
}

<div class="pagetitle">
    <h1>@ViewBag.Title</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">@Model.Title</div>
               
                @foreach (var pos in position.List())
                {
                    <div class="card-title">@pos.Position</div>
                    <div class="row">
                        @foreach (var cand in Model.Candidates)
                        {
                            if (cand.Position == pos.ID)
                            {
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body mt-3">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <img width="100%" class="rounded-2 shadow" src="@(cand.Img == null ? Url.Content("~/Content/Img/noimage-available.jpeg") : cand.Img64)" alt="Picture" />
                                                </div>
                                                <div class="col-md-8">
                                                    <h4>@cand.Fullname<br /><span class="fs-6">@cand.Course</span></h4><br />
                                                    <span>@cand.Plataforma</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#data').DataTable({
            ordering: false,
            searching: true
        });

    </script>
}